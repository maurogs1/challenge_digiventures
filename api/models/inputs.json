  "register": {
    "title": "Welcome",
    "inputs": [
      {
        "type": "text",
        "name": "fullname",
        "label": "Your full name",
        "regex": "^[a-zA-Z]+(([',. -][a-zA-Z ])?[a-zA-Z]*)*$",
